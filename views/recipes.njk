{% extends 'layout.njk' %}

{% block head %}
    <title>Receitas Foodfy</title>
    <link rel="stylesheet" href="/modal.css">
{% endblock %}

{% block content %}
 
    <section class="cards">
        {% for item in items%}
        <div class="card"> 
            <div class="card-image">
                <img src="{{item.image}}" alt="Image {{item.title}}">
            </div>
            <div class="card-title">
                <h1>{{item.title}}</h1>
            </div>
            <div class="card-author">
                <p>{{item.title}}</p>
            </div>
        </div>
        {% endfor %}
    </section>
    
{% endblock %}