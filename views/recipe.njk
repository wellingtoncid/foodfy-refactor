{% extends 'layout.njk' %}

{% block head %}
    <title>{{item.title}} Foodfy</title>
    <link rel="stylesheet" href="recipe.css">
{% endblock %}

{% block content %}

<section class="recipe">

    <div class="recipe_image">
        <img src="{{item.image}}" alt="Image of {{item.title}}">
    </div>

    <div class="recipe_title">
        <h1>{{item.title}}</h1>
    </div>
    <div class="recipe_author">
        <p>{{item.author}}</p>
    </div>
    
    <div class="recipe_ingredients">
        <h2 id="first">Ingredientes</h2> <span><button>Esconder</button></span> 
        <ul class="hideable">
            
            <li>{{item.ingredients}}</li>
              
        </ul>
    </div>

    <div class="recipe_preparation">
        <h2>Modo de preparo</h2><button>Esconder</button>
        <div class="hideable">
            <ol>
                <li>{{item.preparation}}</li>
            </ol>
        </div>
    </div>

    <div class="recipe_info">
        <h2 id="last">Informações adicionais</h2><button>Esconder</button>
        <p class="hideable">{{item.information}}</p>
    </div>

</section>

{% endblock %}